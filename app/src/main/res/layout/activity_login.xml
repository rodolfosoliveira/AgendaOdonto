<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.android.curso.agendaodonto.LoginActivity">


    <ImageView
        android:id="@+id/img_dente"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="126dp"
        app:srcCompat="@drawable/dentelogo" />

    <EditText
        android:id="@+id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_dente"
        android:hint="Email"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/ed_senha"
        android:layout_below="@id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tx_esqueci_senha"
        android:layout_below="@id/ed_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esqueci minha senha"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/bt_entrar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btNovoUsuario"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btNovoUsuario"
        android:layout_marginBottom="65dp"
        android:text="Entrar"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btNovoUsuario"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_entrar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="46dp"
        android:text="Novo usuÃ¡rio"
        android:textAlignment="center"
        android:onClick="btNovoUsuario"
        />




</RelativeLayout>